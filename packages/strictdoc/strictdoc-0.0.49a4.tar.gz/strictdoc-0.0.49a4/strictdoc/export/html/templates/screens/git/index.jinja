{% extends "base.jinja.html" %}
{% set template_type = "DIFF" %}

{% block head_css %}
  {{ super() }}
  <link rel="stylesheet" href="{{ link_renderer.render_static_url('diff.css') }}"/>
{% endblock head_css %}

{% block head_scripts %}
  {{ super() }}

  {%- if project_config.is_running_on_server and not standalone -%}
  <script type="module">
    import hotwiredTurbo from "{{ link_renderer.render_static_url_with_prefix('turbo.min.js') }}";
    import { Application, Controller } from "{{ link_renderer.render_static_url_with_prefix('stimulus.min.js') }}";
    window.Stimulus = Application.start();
    window.Controller = Controller;
  </script>
  <script type="module" src="{{ link_renderer.render_static_url('controllers/modal_controller.js') }}"></script>
  {%- endif -%}
  <script type="text/javascript" src="{{ link_renderer.render_static_url('diff.js') }}"></script>
{% endblock head_scripts %}

{% block title %}
  {{ project_config.project_title }} - {{ template_type }}
{% endblock title %}

{% assert tab in ("diff", "changelog") %}
{% block viewtype %}{{ tab }}{% endblock viewtype %}

{% block layout_nav %}
  {% include "_shared/nav.jinja.html" %}
{% endblock layout_nav %}

{% block tree_content %}
   {# NOTHING #}
{% endblock tree_content %}

{% block header_content %}
  {%- with header__pagetype=template_type -%}
    {% include "components/header/index.jinja" %}
  {%- endwith -%}
{% endblock header_content %}

{% block main_content %}
  {% include "screens/git/main.jinja" %}
{% endblock main_content %}
