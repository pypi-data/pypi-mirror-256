<odoo>
  <data>
    <!-- Form view -->
    <record id="view_tanit_service_features_form" model="ir.ui.view">
      <field name="name">view.tanit.services.features.form</field>
      <field name="model">tanit_inventory.service.feature</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
          <form string="Service Features">
              <sheet>
                  <group name="group_top">
                      <group name="group_left">
                          <field name="service_feature_type_id"/>
                          <field name="value" widget="CopyClipboardChar"/>
                          <field name="description"/>
                      </group>
                  </group>
              </sheet>
          </form>
      </field>
  </record>

  <!-- Tree view -->
  <record id="view_tanit_service_features_tree" model="ir.ui.view">
    <field name="name">Service Features</field>
    <field name="model">tanit_inventory.service.feature</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
        <tree string="Service Type">
          <field name="service_feature_type_id"/>
          <field name="value"/>
          <field name="description"/>
        </tree>
    </field>
  </record>


  </data>
</odoo>