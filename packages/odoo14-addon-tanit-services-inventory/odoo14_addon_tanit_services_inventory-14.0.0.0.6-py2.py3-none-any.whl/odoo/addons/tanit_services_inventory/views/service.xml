<odoo>
  <data>
    <!-- Form view -->
    <record id="view_tanit_services_form" model="ir.ui.view">
      <field name="name">view.tanit.services.form</field>
      <field name="model">tanit_inventory.service</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
          <form string="Services">
              <sheet>
                  <div class="oe_title">
                      <label for="name" string="Service" />
                      <h1 class="oe_title">
                          <field name="name"/>
                      </h1>

                      <div class="oe_edit_only" height="15px"></div>

                      <label for="service_type_id" class="oe_edit_only" string="Service type" />
                      <div class="o_row">
                        <label for="service_type_id" class="oe_read_only" string="Service type" />
                        <h2>
                            <field name="service_type_id" options="{'no_create': True}"/>
                        </h2>
                      </div>
                  </div>

                  <div class="oe_edit_only" height="15px"></div>

                  <label for="partner" class="oe_edit_only" string="Client" />
                  <div class="o_row">
                    <label for="partner" class="oe_read_only" string="Client" />
                    <h3>
                      <field name="partner" options="{'no_create': True}"/>
                    </h3>
                  </div>

                  <group name="main">                    
                    <group>
                        <field name="contact_partner" options="{'no_create': True}"/>
                        <field name="contact_partner_mail" widget="email"/>
                        <div height="20px"></div>
                        <field name="employee" options="{'no_create': True}"/>
                        <field name="employee_mail" options="{'no_create': True}"/>
                        <div height="20px"></div>
                        <field name="is_active" widget="boolean_toggle"/>
                        <field name="priority" widget="priority"/>
                        <field name="service_start_date"/>
                    </group>

                    <group>
                      <field name="service_contract_id"/>
                      <field name="contract_end_date" widget="remaining_days"/>
                      <div height="20px"></div>
                      <field name="service_project_id"/>
                    </group>
                  </group>

                  <h2>Features</h2>
                  <field name="service_feature_ids"/>
                  
                  <div height="20px"></div>
                  
                  <h2>Related Services</h2>
                  <field name="related_services_computed" class="oe_read_only"/>
                  
                  <group>
                      <notebook>
                          <page string="Description" name="description">
                              <field name="description" widget="html" />
                          </page>
                          <page string="Comments" name="comments">
                              <field name="comments" widget="html" />
                          </page>

                          <page string="Related services" name="related_services">
                              <h2>Related Services to</h2>
                              <field name="related_service_ids"/>

                              <h2>Related Services from</h2>
                              <field name="related_service_reverse_ids"/>
                          </page>
                      </notebook>
                  </group>
              </sheet>
              <!-- Add chatter and followers widget -->
              <div class="oe_chatter">
                  <!-- Followers view -->
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="activity_ids" widget="mail_activity" />
                  <!-- Chatter view -->
                  <field name="message_ids" widget="mail_thread"/>
              </div>
          </form>
      </field>
  </record>

  <!-- Tree view -->
  <record id="view_tanit_services_tree" model="ir.ui.view">
    <field name="name">Services</field>
    <field name="model">tanit_inventory.service</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
        <tree string="Inventory">
          <field name="name"/> 
          <field name="is_active" string="Active"/> 
          <field name="service_type_id"/>
          <field name="partner"/>
          <field name="contract_end_date" widget="remaining_days"/>
          <field name="priority" widget="priority"/>
          <field name="activity_ids" widget="list_activity"/>
        </tree>
    </field>
  </record>


  <record id="view_search_custom" model="ir.ui.view">
      <field name="name">Custom Search View</field>
      <field name="model">tanit_inventory.service</field>
      <field name="arch" type="xml">
          <search>
              
              <field name="name"/>
              <field name="partner"/>
              <field name="service_type_id"/>
              <field name="priority" widget="priority"/>
              <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
              <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
              <group expand="0" string="Group By">
                <filter string="Client" name="client" context="{'group_by': 'partner'}"/>
                <filter string="Service Type" name="service_type" context="{'group_by': 'service_type_id'}"/>
                <filter string="Status" name="status" context="{'group_by': 'is_active'}"/>
              </group>
          </search>
      </field>
  </record>


